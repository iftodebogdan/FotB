<% provide(:band_path, "/bands/#{@band.id}") %>
<% provide(:band_name, @band.band_name) %>

<table class="table table-striped">  
<thead>  
  <tr>  
    <th>Album name</th> 
    <th># of Topics</th>  
    <th># of Posts</th>
    <th></th> 
  </tr>  
</thead>  
<tbody>
<% @band.albums.each do |album| %>
  <tr>
    <td><%= link_to album.album_name, "/albums/#{album.id}" %></td>
    <td><%= album.topics.count %></td>
    <td><%= album.posts.count %></td>
    <td><%= link_to 'Edit', "#{edit_album_path(album)}?band_id=#{@band.id}", :class => "btn btn-mini" %>&nbsp;<%= link_to 'Delete', album, :class => "btn btn-mini", :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>  
</table>
<%= link_to "New album", {:controller => "albums", :action => "new", :band_id => @band.id }, :class => "btn btn-mini" %>
<%= link_to "Back", '/bands/', :class => "btn btn-mini" %>

<% if false %>
<br/><br/><br/><br/><br/>

<p>
  <b>Band name:</b>
  <%= @band.band_name %>
</p>


<%= link_to 'Edit', edit_band_path(@band) %> |
<%= link_to 'Back', bands_path %>
<% end %>
