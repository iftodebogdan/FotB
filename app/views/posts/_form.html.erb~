<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :post_content %><br />
    <textarea rows="8" cols="100" style="width:auto" id="post_post_content" name="post[post_content]" type="text">
    <%= @post.post_content %>
    </textarea> 
  </div>
  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :band_id, :value => (Band.find(params[:band_id])).id %>
  </div>
  <div class="field">
    <%= f.hidden_field :album_id, :value => (Album.find(params[:album_id])).id %>
  </div>
  <div class="field">
    <%= f.hidden_field :topic_id, :value => (Topic.find(params[:topic_id])).id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
