<%= (Band.find(params[:band_id])).id %>
<%= form_for(@topic) do |f| %>
  <% if @topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% @topic.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :topic_name %><br />
    <%= f.text_field :topic_name %>
  </div>
  <div class="field">
    <%= f.hidden_field :band_id, :value => (Band.find(params[:band_id])).id %>
  </div>
  <div class="field">
    <%= f.hidden_field :album_id, :value => (Album.find(params[:album_id])).id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
